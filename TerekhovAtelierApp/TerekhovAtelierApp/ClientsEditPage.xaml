<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TerekhovAtelierApp.ClientsEditPage"
             Appearing="ContentPage_Appearing">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Введите код клиента" x:Name="enId"></Entry>
            <Entry Placeholder="Введите имя клиента" x:Name="enName"></Entry>
            <Entry Placeholder="Введите фамилию клиента" x:Name="enSurname"></Entry>
            <Entry Placeholder="Введите отчество клиента" x:Name="enPatronymic"></Entry>
            <Entry Placeholder="Введите номер телефона клиента" x:Name="enPhNumber"></Entry>
            <Button Text="Сохранить" x:Name="BtnSave" Clicked="BtnSave_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>