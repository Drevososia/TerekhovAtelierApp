<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TerekhovAtelierApp.EmployeesEditPage"
             Appearing="ContentPage_Appearing">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Введите код сотрудника" x:Name="enId"></Entry>
            <Entry Placeholder="Введите имя сотрудника" x:Name="enName"></Entry>
            <Entry Placeholder="Введите фамилию сотрудника" x:Name="enSurname"></Entry>
            <Entry Placeholder="Введите отчество сотрудника" x:Name="enPatronymic"></Entry>
            <Entry Placeholder="Введите код вида сотрудника" x:Name="enIdEmpType"></Entry>
            <Button Text="Сохранить" x:Name="BtnSave" Clicked="BtnSave_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>