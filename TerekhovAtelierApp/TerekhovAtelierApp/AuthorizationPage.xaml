<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TerekhovAtelierApp.AuthorizationPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="EntryLogin" Placeholder="Логин"></Entry>
            <Entry x:Name="EntryPassword" Placeholder="Пароль"></Entry>
            <Button x:Name="BtnLogin" Clicked="BtnLogin_Clicked" Text="Войти"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>